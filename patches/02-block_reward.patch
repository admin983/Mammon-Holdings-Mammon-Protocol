+// MAMMON PROTOCOL BLOCK REWARD CALCULATION
+// ============================================================================
+// Emission Schedule:
+//   Year 1: 100 MAM/block
+//   Year 2: 75 MAM/block
+//   Year 3: 50 MAM/block
+//   Year 4: 25 MAM/block
+//   Year 5+: 10 MAM/block (perpetual tail emission)
+//
+// Fee Distribution:
+//   85% - Miner
+//   10% - Treasury (Mammon's Hoard)
+//   5%  - Insurance (Oh Shit Fund)
+// ============================================================================
+
+namespace mammon {
+
+// Get base block reward for a given height
+uint64_t get_block_reward(uint64_t height) {
+    const uint64_t BLOCKS_PER_YEAR = MAMMON_BLOCKS_PER_YEAR;  // 262980
+    
+    if (height < BLOCKS_PER_YEAR * 1) {
+        return MAMMON_YEAR1_REWARD;  // 100 MAM
+    } else if (height < BLOCKS_PER_YEAR * 2) {
+        return MAMMON_YEAR2_REWARD;  // 75 MAM
+    } else if (height < BLOCKS_PER_YEAR * 3) {
+        return MAMMON_YEAR3_REWARD;  // 50 MAM
+    } else if (height < BLOCKS_PER_YEAR * 4) {
+        return MAMMON_YEAR4_REWARD;  // 25 MAM
+    } else {
+        return MAMMON_TAIL_REWARD;   // 10 MAM forever
+    }
+}
+
+// Fee distribution structure
+struct fee_distribution {
+    uint64_t miner_amount;
+    uint64_t treasury_amount;
+    uint64_t insurance_amount;
+};
+
+// Calculate fee split from total reward
+fee_distribution calculate_fee_split(uint64_t total_reward) {
+    fee_distribution dist;
+    
+    dist.treasury_amount = (total_reward * MAMMON_TREASURY_FEE_PERCENT) / 100;   // 10%
+    dist.insurance_amount = (total_reward * MAMMON_INSURANCE_FEE_PERCENT) / 100; // 5%
+    dist.miner_amount = total_reward - dist.treasury_amount - dist.insurance_amount;  // 85%
+    
+    // Note: integer division gives miner any rounding dust
+    return dist;
+}
+
+} // namespace mammon
